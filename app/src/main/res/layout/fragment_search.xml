<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBF38D">

        <EditText
            android:id="@+id/search_fragment_search_recipe_string"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/search_background"
            android:hint="@string/favorites_search_hint"
            android:inputType="text"
            android:paddingStart="4dp"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </EditText>

        <Button
            android:id="@+id/search_fragment_filter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/filter_background"
            android:shadowColor="@color/black"
            android:shadowRadius="100"
            android:text="@string/all_filters"
            android:textColor="@color/white"
            android:translationZ="50dp"
            app:layout_constraintEnd_toEndOf="@+id/search_fragment_search_recipe_string"
            app:layout_constraintStart_toStartOf="@+id/search_fragment_search_recipe_string"
            app:layout_constraintTop_toBottomOf="@+id/search_fragment_search_recipe_string" />

        <GridLayout
            android:id="@+id/search_fragment_main_categories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginTop="48dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_fragment_filter_button">

            <FrameLayout
                android:id="@+id/search_fragment_breakfast_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="0dp">

                <ImageView
                    android:id="@+id/breakfastImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_image"
                    android:src="@mipmap/ic_breakfast"
                    android:clipToOutline="true"
                    android:outlineProvider="background"/>

                <TextView
                    android:id="@+id/breakfastTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/breakfast"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="5" />
            </FrameLayout>


            <Button
                android:id="@+id/search_fragment_lunch_button"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="#FFC107"
                android:text="@string/lunch"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/search_fragment_dinner_button"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="#2196F3"
                android:text="@string/dinner"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/search_fragment_dessert_button"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="#9E9E9E"
                android:text="@string/desserts"
                android:textColor="#FFFFFF" />

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>